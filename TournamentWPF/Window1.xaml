<Window x:Class="TournamentWPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:TournamentWPF"
    Title="Window1" Height="350" Width="350" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate x:Key="MatchTemplate" DataType="TournamentWPF.Match">
            <Grid HorizontalAlignment="Stretch" Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0" RadiusX="5" RadiusY="5" Margin="2" x:Name="redrectangle">
                    <Rectangle.Style>
                        <Style>
                            <Setter Property="Rectangle.Fill" Value="Silver"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=RedWins}" Value="True">
                                    <Setter Property="Rectangle.Fill" Value="#fffa8080"/>
                                    <Setter Property="Rectangle.Stroke" Value="#ff000000"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=BlueWins}" Value="True">
                                    <Setter Property="Rectangle.Fill" Value="#30fa8080"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
                <Rectangle Grid.Column="1" RadiusX="5" RadiusY="5" Margin="2" x:Name="bluerectangle">
                    <Rectangle.Style>
                        <Style>
                            <Setter Property="Rectangle.Fill" Value="Silver"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=RedWins}" Value="True">
                                    <Setter Property="Rectangle.Fill" Value="#306080fa"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=BlueWins}" Value="True">
                                    <Setter Property="Rectangle.Fill" Value="#ff6080fa"/>
                                    <Setter Property="Rectangle.Stroke" Value="#ff000000"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
                <Rectangle Grid.Column="2" Fill="Silver" RadiusX="5" RadiusY="5" Margin="2" x:Name="winnerrectangle"/>
                
                <Label Grid.Column="0" Width="100" Content="{Binding Path=RedRobot}" x:Name="RedLabel" />
                <Label Grid.Column="1" Width="100" Content="{Binding Path=BlueRobot}" x:Name="BlueLabel" />
                <Label Grid.Column="2" Width="100" Content="{Binding Path=Winner}" x:Name="WinnerLabel" />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>   
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Click="Button_Click">asdasd</Button>            
        <ScrollViewer Grid.Row="1" Name="scrollViewer1">
            <StackPanel>
                <ListBox Name="Matches" ItemTemplate="{StaticResource MatchTemplate}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>

